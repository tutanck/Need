<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="1dp"
    app:cardBackgroundColor="@color/MilkyWhite"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/mainWrapperLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ownerProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ownerIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle"
                android:src="@drawable/ic_person_24dp" />

            <TextView
                android:id="@+id/ownerNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginRight="@dimen/large"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/sample_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/BlackM"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/adWrapperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sample_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/Black"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/descriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="@string/sample_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/LightBlack"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/keywordsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/sample_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/DarkGray"
                    android:textSize="12dp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/metaInfosLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/publicationDateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/publishedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PubliÃ© il y a "
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/Gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/adDateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxWidth="100dp"
                        android:text="@string/sample_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/CornflowerBlue"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/placeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/publicationDateLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/placeIV"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_place_16dp_gray" />

                    <TextView
                        android:id="@+id/adDistanceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Km"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/CornflowerBlue"
                        android:textSize="12dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/pokeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="bottom|center_horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Je me propose"
                    android:textColor="@color/DodgerBlue"
                    android:textSize="14dp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>